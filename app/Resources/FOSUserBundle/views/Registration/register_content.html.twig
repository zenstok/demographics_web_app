{% trans_default_domain 'FOSUserBundle' %}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Demographics</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->  
    <link rel="icon" type="image/png" href="/demo.ico"/>
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->  
    <link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->  
    <link rel="stylesheet" type="text/css" href="/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/css/util.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
<style>
#_submit:hover {
    background-color: green;
}
</style>
</head>
<body>
    
    <div class="limiter">
        <div class="container-login100" style="background-image: url('/images/bg-01.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Account Registration
                </span>
                {% if form.plainPassword.vars.errors.form.transformationFailure is not null %}
                    <div class="alert" role="alert" style="background-color: #F8694A; color: white; font-family: Ubuntu-Bold;">
                      The entered passwords don't match.
                    </div>
                {% elseif form.plainPassword.vars.data|length == 1 %}
                    <div class="alert" role="alert" style="background-color: #F8694A; color: white; font-family: Ubuntu-Bold;">
                      Password is too short.
                    </div>
                {% endif %}
                {% if form.username.vars.errors|length > 0 %}
                    <div class="alert" role="alert" style="background-color: #F8694A; color: white; font-family: Ubuntu-Bold;">
                      {{ form.username.vars.errors[0].message }}
                    </div>
                {% endif %}
                {% if form.email.vars.errors|length > 0 %}
                    <div class="alert" role="alert" style="background-color: #F8694A; color: white; font-family: Ubuntu-Bold;">
                      {{ form.email.vars.errors[0].message }}
                    </div>
                {% endif %}
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register login100-form validate-form p-b-33 p-t-5'}}) }}
                    <div class="wrap-input100 validate-input" data-validate = "Enter email">
                    	{{form_widget(form.email, {'attr': {'class': 'input100','placeholder': 'Email'}})}}
                        <span class="focus-input100" data-placeholder="&#xe818;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                    	{{form_widget(form.username, {'attr': {'class': 'input100','placeholder': 'User name'}})}}
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span> 
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                    	{{form_widget(form.plainPassword.first, {'attr': {'class': 'input100','placeholder': 'Password'}})}}
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span> 
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Confirm password">
                    	{{form_widget(form.plainPassword.second, {'attr': {'class': 'input100','placeholder': 'Confirm password'}})}}
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span> 
                    </div>

				    <div class="container-login100-form-btn m-t-32">
				        <input class="login100-form-btn" type="submit" value="{{ 'registration.submit'|trans }}" id="_submit" />
				    </div>
                    <div class="float-right" style="padding: 5px;">
                        <a href="/login">Login</a>
                    </div>
				{{ form_end(form) }}

            </div>
        </div>
    </div>
    

    <div id="dropDownSelect1"></div>
    
<!--===============================================================================================-->
    <script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
    <script src="/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
    <script src="/vendor/bootstrap/js/popper.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
    <script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
    <script src="/vendor/daterangepicker/moment.min.js"></script>
    <script src="/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
    <script src="/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
    <script src="/js/main.js"></script>

</body>
</html>
